print("Enter Number of wants to go an upto : ")
if let a = Int(readLine()!){
  for i in 1...a{
      for _ in 0...a-i{
        print("   ",terminator:"")
      }
      for _ in 1...(2*i-1){
        print(" *",terminator:" ")
      }
      print("")
   }
   for i in (1...a).reversed(){
      for _ in 0...a-i{
        print("   ",terminator:"")
      }
      for _ in (1...(2*i-1)){
        print(" *",terminator:" ")
      }
      print("")
    }
}else{
  print("not")
}
